<div class= "form-signin d-flex align-items-center justify-content-center mt-4">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, class: "form-control",required: true %>
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "current-password" , class: "form-control",required: true%>
      <label for="floatingPassword">Password</label>
    </div>
    <div class="checkbox mb-3">
      <label>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </label>
    </div>
    <%= f.submit "Log in",class: "w-100 btn btn-lg btn-primary" %>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
